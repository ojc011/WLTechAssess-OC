<div class="login">
<h1> Hello and Welcome! <h1>
<h2> Address Book <h2> 
<br>
<% if current_user %>
    <%= link_to 'Logout', '/logout', :data => { :confirm => 'Are you sure?' }%>
    <br>
    <%= link_to 'My Contacts', contacts_path %>
<% else %>
    <%= link_to 'Signup', '/signup', class: "contact-btn btn btn-outline-secondary" %>
    <br>
    <%= link_to 'Login', '/login', class: "contact-btn btn btn-outline-secondary" %>
<% end %>
</div>
