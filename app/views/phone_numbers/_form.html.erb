<%= form_with model: [ contact, phone_number ] do |form| %>

  <% if @phone_number.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@phone_number.errors.count, "error") %> prevented this phone number from being saved:
      </h2>
      <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :kind %><br>
    <%= form.text_field :kind %>
  </p>

  <p>
    <%= form.label :number %>*<br>
    <%= form.text_field :number %>
  </p>

  <p>
    <%= form.label :comment %><br>
    <%= form.text_area :comment %>
  </p>

  <p>* = required field</p>

  <p>
    <%= form.submit %>
  </p>
<% end %>